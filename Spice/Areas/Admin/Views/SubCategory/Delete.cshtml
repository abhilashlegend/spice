@model Spice.Models.ViewModels.SubCategoryAndCategoryViewModel
@using Spice.Extensions

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />
<h1>Delete Sub Category</h1>
<br />

<div class="border backgroundWhite">
    <div class="row">
        <div class="col-sm-8 border-right">
            <form method="post" asp-action="Delete">
                <input type="hidden" asp-for="SubCategory.CategoryId" />
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group row">
                    <div class="col-2">
                        <label asp-for="SubCategory.CategoryId" class="col-form-label"></label>
                    </div>
                    <div class="col-5">
                        <input type="text" readonly id="ddlCategorylist" asp-for="SubCategory.CategoryId" class="form-control" />
               
                    </div>

                </div>
                <div class="form-group row">
                    <div class="col-2">
                        <label asp-for="SubCategory.Name" class="col-form-label"></label>
                    </div>
                    <div class="col-5">
                        <input asp-for="SubCategory.Name" readonly class="form-control" />
                    </div>
           
                </div>
                <div class="form-group row">
                    <div class="col-5 offset-2">
                        <partial name="_DeleteAndBackToList" model="Model.SubCategory.Id" />
                    </div>
                </div>
            </form>
        </div>
        <div class="col-sm-3 offset-1">
           
        </div>
    </div>

</div>


@section Scripts{
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }

    
}





